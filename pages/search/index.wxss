.top{
    background: #007aff;
    width: 100%;
    margin-top: -10px;
    padding-top: 10px;
    padding-bottom: 20px;
}
.top-title-topname{
    position: relative;
    top: -10px;
}
.top-title-bottomname{
    position: relative;
    top: -70px;
}
.top-title-bg{
    background: url('image/bg_0.png') no-repeat center;
    width: 100px;
    height: 100px;
    position: absolute;
    top: 0;left: 0;
    margin-left: -10px;
    margin-top: -10px;
}
.top-title{
    margin: 20px auto;
    background: #0062CC;
    color: #fff;
    width: 80px;
    height: 80px;
    border-radius: 50%;
    text-align: center;
    line-height: 80px;
    position: relative
}
.btn-box{
    position: absolute;
    right: 20px;
    top: 20px;
}
.btn{
    padding: 5px 8px;
    color: #fff;
    border-radius: 20px;
    text-align: center;
    font-size: 10px;
    float: left;
}
.btn.active{
    color: #007aff;    
    background: #fff;
}
.time{
    text-align: center;
    margin: 0 auto;
    font-size: 12px;
    color: #fff;
}
.search{
    overflow: hidden;
    width: 210px;
    border-radius: 7px;
    margin: 0 auto;
    position: relative;
    background: #fff;
}
.search-t{
    padding: 0 10px;
    border: none;
    float: left;
    background: transparent;
    font-size: 12px;
    box-sizing: border-box;
    width: 150px;
}
.search-in{
   float: left;
   border-left: 1px solid #dbdcdc;
   width: 40px;
   height: 30px;
   position: absolute;
   right: 0;
   top: 0;
}
.search-icon{
    width: 20px;
    height: 20px;
    position: relative;
    top: 2px;
    left: 8px;
}

/*
搜索结果
*/
.content-title{
    width: 600rpx;
    margin: 15px auto;
    color: #4d4d4d;
    font-size: 17px;
}
.border-box{
    border: 1px solid #d2d2d2;
    width: 600rpx;
    margin: 0 auto;
}
.reslist-box{
    width: 100%;
    margin: 0 auto;
    overflow: hidden;
    background: #fff;
}
.list{
    width: 100%;
    height: 104rpx;
    border-bottom: 1px solid #d2d2d2;
    padding: 10rpx;
    overflow: hidden;
    background: #fff;
}
.avatar-bg{
    width: 84rpx;
    height: 84rpx;
    border-radius: 50%;
    overflow: hidden;
    float: left;
    margin: 10rpx;
}
.msg{
    margin-left: 84rpx;
}
.msg-icon{
    width: 36rpx;
    height: 32rpx;
    position: relative;
    top: 6rpx;
    left: 6rpx;
}
.msg-title{
    line-height: 50rpx;
    font-size: 30rpx;
}
.msg-name{
    line-height: 50rpx;
    font-size: 22rpx;
}
/*
底部
*/
.footer{
    width: 100%;
    text-align: center;
    font-size: 12px;
    color: #4d4d4d;
    line-height: 40rpx;
    margin-bottom: 36rpx;
    margin-top: 50rpx;
}
.footer-list{
    width: 100%;
    font-size: 24rpx;
}
.block{
    height: 400rpx;
}
/*
动画
*/
.top-title-bg{
    animation: rotate 0.8s ease-out 0.2s;
}

@keyframes rotate{
    from{ transform: rotate(0deg) }
    to{ transform: rotate(360deg) }
}